<%= form_for @song  do |f| %>
  <%= f.label :title %>
  <%= f.text_field :title %>
<br>

  <%= f.label :artist_name %>
  <%= f.text_field :artist_name %>
<br>

  <%= f.label "Select Genre" %>
  <%= f.select :genre_id, options_from_collection_for_select(Genre.all, "id", "name") %>
<br>

  <%= f.fields_for :notes do |note_f| %>
    <%= note_f.label :note %>
    <%= note_f.text_area :content %>
  <% end %>
  
<br>

  <%= f.submit %>
<% end %>